<?php
function generarFibonacci($n) {
    // Paso 1: Validar el valor de $n
    if ($n <= 0) {
        return []; // Si $n es menor o igual a 0, devolvemos un array vacío.
    }

    // Paso 2: Inicializar el array con los primeros términos de la serie Fibonacci
    $fibonacci = [0]; // Primer término de la serie es 0.
    if ($n > 1) {
        $fibonacci[] = 1; // Segundo término de la serie es 1, solo lo añadimos si $n es mayor que 1.
    }

    // Paso 3: Generar los términos restantes de la serie
    for ($i = 2; $i < $n; $i++) {
        // Cada término es la suma de los dos anteriores
        $fibonacci[] = $fibonacci[$i - 1] + $fibonacci[$i - 2];
    }

    // Paso 4: Retornar el array con la serie generada
    return $fibonacci;
}

// Ejemplo de uso
$n = 10; // Número de términos que queremos generar
$resultado = generarFibonacci($n);
echo "Los primeros $n términos de la serie Fibonacci son: " . implode(", ", $resultado);
?>
